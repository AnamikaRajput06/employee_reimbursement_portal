<%= form_with(model: employee) do |form| %>
  <% if employee.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(employee.errors.count, "error") %> prohibited this employee from being saved:</h2>

      <ul>
        <% employee.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row my-3">
    <div class="col-3">
      <%= form.label :first_name, class: 'mb-2'%>
      <%= form.text_field :first_name, class: 'form-control' %>
    </div>
    <div class="col-3">
      <%= form.label :last_name, class: 'mb-2' %>
      <%= form.text_field :last_name, class: 'form-control' %>
    </div>
    <div class="col-6">
      <%= form.label :email, class: 'mb-2' %>
      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <span class="input-group-text" id="basic-addon1">@</span>
        </div>
        <%= form.email_field :email, class: 'form-control' %>
      </div>

    </div>
  </div>


  <div class="row my-3">
    <div  class="col-3">
      <%= form.label :designation, class: 'mb-2' %>
      <%= form.text_field :designation, class: 'form-control' %>
    </div>

    <div  class="col-4">
      <%= form.label :company_id, "Company", class: 'mb-2' %>
      <%= form.collection_select(:company_id,  Company.all, :id, :name, {prompt: 'Select company'},{class: 'form-control'}) %>
    </div>
  </div>

  <div class="d-flex">
    <%= form.submit class: 'btn btn-primary'%>
    <%= link_to 'Back', employees_path, class: 'btn btn-secondary mx-3' %>
  </div>
<% end %>
