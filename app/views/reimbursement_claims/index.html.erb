<%if notice.present? %>
  <p style="color: green"><%= notice %></p>
<%end%>
<% content_for :title, "Reimbursement claims" %>
<div class="d-flex justify-content-between align-items-center mb-4">

  <h1>Reimbursement claims</h1>

  <div>
    <%= link_to "New reimbursement claim", new_employee_reimbursement_claim_path(@employee), class: "btn btn-primary" %>
  </div>
</div>

<table class="table table-striped table-bordered">
  <thead class="thead-light">
    <tr>
      <th scope="col">Date of Expenditure</th>
      <th scope="col">Purpose</th>
      <th scope="col">Amount</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    <% @reimbursement_claims.each do |reimbursement_claim| %>
      <tr style="vertical-align: middle">
        <td><%= reimbursement_claim.date_of_expenditure.strftime("%d-%m-%Y") %></td>
        <td><%= reimbursement_claim.purpose %></td>
        <td><%= reimbursement_claim.amount %></td>
        <td>
          <div class="d-flex">
            <%= button_to "Delete", employee_reimbursement_claim_path(@employee, reimbursement_claim), method: :delete, class: 'btn btn-danger mx-2' %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

